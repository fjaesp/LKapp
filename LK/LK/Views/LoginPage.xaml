<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LK.Views.LoginPage"
             Title="Velkommen til LK" 
	         BackgroundColor="Transparent">
    <StackLayout Spacing="20" Padding="20" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Transparent">
        <Image Source="icon.png" Aspect="AspectFit" HorizontalOptions="Center" />
        <Image Source="LKTxT.png" Aspect="AspectFit" />
        <BoxView Color="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
        <Button x:Name="btnSignUpSignIn" Text="Sign up or Sign in" TextColor="Silver" Clicked="OnSignUpSignIn" VerticalOptions="End" HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>