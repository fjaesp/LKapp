<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LK.Views.MyPage"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
             Title="Min side">
    <ScrollView x:Name="MyPageScrollView">
        <StackLayout HorizontalOptions="Start" VerticalOptions="Center">
            <controls:CircleImage   x:Name="ProfilePicture"
                                    Source="defaultprofilepic.png"
                                    Aspect="AspectFill"
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="CenterAndExpand">
            <controls:CircleImage.WidthRequest>
              <OnPlatform x:TypeArguments="x:Double">
                <OnPlatform.iOS>200</OnPlatform.iOS>
                <OnPlatform.Android>200 </OnPlatform.Android>
                <OnPlatform.WinPhone>225</OnPlatform.WinPhone>
              </OnPlatform>
            </controls:CircleImage.WidthRequest>
          <controls:CircleImage.HeightRequest>
              <OnPlatform x:TypeArguments="x:Double">
                <OnPlatform.iOS>200</OnPlatform.iOS>
                <OnPlatform.Android>200</OnPlatform.Android>
                <OnPlatform.WinPhone>225</OnPlatform.WinPhone>
              </OnPlatform>
             </controls:CircleImage.HeightRequest>
          </controls:CircleImage>
            <Label x:Name="nameLabel" TextColor="Gray" FontSize="20" HorizontalOptions="Center" />
            <StackLayout HorizontalOptions="StartAndExpand" BackgroundColor="Transparent" Margin="0,15,0,0">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEditButtonClicked"/>
                </StackLayout.GestureRecognizers>
                <Grid RowSpacing="5" HorizontalOptions="Start" Padding="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Source="Profile.png" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" HeightRequest="25" WidthRequest="25"/>
                    <Label Text="Rediger profil" 
                            TextColor="Gray" 
                            FontSize="Medium" 
                            LineBreakMode="WordWrap"
                            Grid.Column="1" 
                            HorizontalOptions="Start" 
                            VerticalOptions="Center"/>
                    <Image Source="Arrow.png"
                            Grid.Column="2" 
                            HeightRequest="17" 
                            HorizontalOptions="End" />
                </Grid>
            </StackLayout>
            <StackLayout HorizontalOptions="StartAndExpand" BackgroundColor="Transparent">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnResetPwdBtnClicked"/>
                </StackLayout.GestureRecognizers>
                <Grid RowSpacing="5" HorizontalOptions="Start" Padding="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Source="Profile.png" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" HeightRequest="25" WidthRequest="25"/>
                    <Label Text="Endre passord" TextColor="Gray" FontSize="Medium" LineBreakMode="WordWrap" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center"/>
                    <Image Source="Arrow.png" Grid.Column="3" HeightRequest="17" HorizontalOptions="End" />
                </Grid>
            </StackLayout>
            <StackLayout HorizontalOptions="Start" BackgroundColor="Transparent" Padding="0,10,0,0">
                <Label Text="Mine dokumenter" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Start" />
                <ListView x:Name="AttachmentList" 
                    Grid.Row="5" 
                    Grid.ColumnSpan="2" 
                    HasUnevenRows="False" 
                    HeightRequest="130"
                    SeparatorVisibility="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnAttachmentTapped" />
                                    </StackLayout.GestureRecognizers>
                                    <Grid Padding="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Image Source="{Binding fileicon}" WidthRequest="30" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />
                                        <Label Text="{Binding filename}" FontSize="Medium" Grid.Row="0" Grid.Column="1" HorizontalOptions="Start" />
                                        <Label x:Name="AttachmentUrlString" Text="{Binding url}" Grid.Row="0" Grid.Column="1" IsVisible="False"/>
                                    </Grid>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
